{
  "@context": "https://schema.org",
  "@type": "VisualArtwork",
  "name": "{{ .Asset.Name }}",
  "image": "{{ .ServerAddr }}/digital-asset/ipfs-hash/{{ .DigitalAssets.PrimaryImage.ThumbnailIPFSHash }}",
  "license": "{{ .ServerAddr }}/asset/legal-document/ipfs-hash/{{ .Asset.IPFSHash }}",
  "description": "{{ .Asset.CertificateLabel }}",
  "creator": [
    {
      "@type": "Person",
      "name": "{{ .Issuer.Username }}"
    }
  ],
  "width": [
    {
      "@type": "Distance",
      "name": "{{ .AssetProperties.Width }}"
    }
  ],
  "height": [
    {
      "@type": "Distance",
      "name": "{{ .AssetProperties.Height }}"
    }
  ],
  "art_medium": "{{ .AssetProperties.ArtMedium }}",
  "artwork_surface": "{{ .AssetProperties.ArtworkSurface }}",
  "date_created": "{{ .AssetProperties.DateCreated }}"
}